---
import Section from "./Section.astro";
---

<Section
    title="Model S"
    subtitle="From $71,090*"
    content="After Est. Gas Savings"
    color="black"
    id="model-s"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
            class="bg-white bg-opacity-30 p-4 text-sm rounded font-medium text-black px-20 py-2  transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center"
            href="#"
        >
            Order Now</a
        >
        <a
            class="bg-black bg-opacity-30 p-4 text-sm rounded font-medium text-white px-20 py-2 transition-colors hover:bg-white hover:text-black inline-flex justify-center items-center"
            href="#"
        >
            Demo Drive</a
        >
    </div>

    <p class="text-xs text-gray-900 tds-colorscheme--dark">
        <span>
            *Price before incentives and savings is $79,990, excluding taxes and
            fees. Subject to change.
        </span>
        <br />
        <a class="text-blue-500 hover:underline">
            Learn about est. gas savings
        </a>
    </p>

    <img
        slot="background"
        alt="Model S"
        class="h-full w-full object-cover object-center"
        src="model-s.avif"
        id="bg-image-models"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    let imageElement = document.querySelector(
        "#bg-image-models",
    ) as HTMLImageElement; // TypeScript

    if (isEdge()) {
        imageElement.src = "model-s.webp";
    } else {
        imageElement.src = "model-s.avif";
    }
</script>
