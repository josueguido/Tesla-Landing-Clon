---
import Section from "./Section.astro";
---

<Section
    title="Model 3"
    subtitle="Lease starting at $329/mo*"
    color="black"
    id="model-3"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
            class="bg-white bg-opacity-30 p-4 text-sm rounded font-medium text-black px-20 py-2 inline-block"
            href="#"
        >
            Order Now</a
        >
        <a
            class="bg-black bg-opacity-30 p-4 text-sm rounded font-medium text-white px-20 py-2 inline-block"
            href="#"
        >
            Demo Drive</a
        >
    </div>

    <img
        slot="background"
        alt="Model 3"
        class="h-full w-full object-cover object-center"
        src="model-3.avif"
        id="bg-image-model3"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    var imageElement = document.querySelector(
        "#bg-image-model3",
    ) as HTMLImageElement;

    if (isEdge()) {
        imageElement.src = "model-3.webp";
    } else {
        imageElement.src = "model-3.avif";
    }
</script>
