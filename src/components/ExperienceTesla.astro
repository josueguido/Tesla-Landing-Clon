---
import Section from "./Section.astro";
---

<Section
    title="Experience Tesla"
    subtitle="Schedule a Demo Drive Today"
    color="black"
    id="model-s"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
            class="border-[3px] border-white bg-white/5 backdrop-blur-sm text-sm rounded font-medium text-white px-20 py-2 inline-block hover:bg-white hover:text-black transition-colors"
            href="#"
        >
            Demo Drive</a
        >
    </div>

    <img
        slot="background"
        alt="Model S"
        class="h-full w-full object-cover object-center"
        src="model-s.avif"
        id="bg-image-models"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    let imageElement = document.querySelector(
        "#bg-image-models",
    ) as HTMLImageElement; // TypeScript

    if (isEdge()) {
        imageElement.src = "model-s.webp";
    } else {
        imageElement.src = "model-s.avif";
    }
</script>
