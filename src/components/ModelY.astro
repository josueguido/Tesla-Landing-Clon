---
import Section from "./Section.astro";
---

<Section
    title="Model Y"
    subtitle="Lease starting at $399/mo*"
    color="white"
    id="model-y"
>
    <div slot="footer" class="gap-x-6 flex mx-auto mb-2">
        <div>
            <div class="flex flex-row gap-x-6 mx-6 ">
                <a
                class="bg-white bg-opacity-60 p-4 text-sm rounded font-medium text-black px-20 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center"
                href="#"
            >
                Order Now</a
            >
            <a
                class="bg-black bg-opacity-25 p-4 text-sm rounded font-medium text-white px-20 py-2 transition-colors hover:bg-white hover:text-black inline-flex justify-center items-center"
                href="#"
            >
                Demo Drive</a
            >
            </div>

            <p class="text-xs text-white my-2 mx-6">
                <span>
                    *Excludes taxes and fees with price subject to change.
                    Available in select states. See Details
                </span>
            </p>
        </div>
    </div>

    <video
        slot="background"
        class="object-center object-cover h-full w-full"
        autoplay
        muted
        loop
        src="Homepage-Model-Y.mp4"></video>
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    var videoElement = document.querySelector(
        "#bg-video-modely",
    ) as HTMLVideoElement;

    if (isEdge()) {
        videoElement.src = "Homepage-Model-Y.mp4";
    }
</script>
