---
import Section from "./Section.astro";
---

<Section
    title="Powerwall"
    color="black"
    id="PowerWall"
>
    <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
            class=" bg-white bg-opacity-30 p-4 text-sm rounded font-medium text-black px-20 py-2 inline-block"
            href="#"
        >
            Order Now</a
        >
        <a
        class=" bg-black bg-opacity-30 p-4  text-sm rounded font-medium text-white px-20 py-2 inline-block"
        href="#"
    >
        Learn More</a
    >
    </div>

    <img
        slot="background"
        alt="PowerWall"
        class="h-full w-full object-cover object-center"
        src="Homepage-Powerwall-Desktop.avif"
        id="bg-image-Powerwall-US.avif"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    let imageElement = document.querySelector(
        "#bg-image-Powerwall-US.avif"
    ) as HTMLImageElement; // TypeScript

    if (isEdge()) {
        imageElement.src = "Homepage-Powerwall-Desktop.avif";
    } else {
        imageElement.src = "Powerwall-US.avif";
    }
</script>