        id="bg-image-accessories"
    />
</Section>

<script>
    function isEdge() {
        if (
            navigator.userAgent.indexOf("Edge") > -1 ||
            navigator.userAgent.indexOf("Edg") > -1
        ) {
            return true;
        } else {
            return false;
        }
    }

    var imageElement = document.querySelector(
        "#bg-image-Homepage-Accessories-Desktop.avif",
    ) as HTMLImageElement;

    if (isEdge()) {
        imageElement.src = "Homepage-Accessories-Desktop.avif";
    } else {
        imageElement.src = "Homepage-Accessories-Desktop.avif";
    }
</script>
