---
import Section from "./Section.astro";
---

<Section
    title="Enjoy Tesla"
    subtitle="Schedule a test drive today"
    color="white"
>
    <div slot="footer">
        <a
            class="border-[3px] border-white bg-white/5 backdrop-blur-sm text-sm rounded font-normal text-white px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
            href="#"
        >
            Demo Drive</a
        >
    </div>

    <video
        slot="background"
        class="object-center object-cover h-full w-full"
        autoplay
        muted
        loop
        src="/public_video.webm"></video>
</Section>
